<%= render "/shared/banner", name: @list.name, image: @list.image_url %>

<div class="container">
  <div class="cards my-3">
    <% @list.bookmarks.each do |bookmark| %>
      <%= render "shared/card_trip", bookmark: bookmark %>
    <% end %>
  </div>

  <div class="row justify-content-md-center mt-5">
    <div class="col col-sm-6 bg-white pt-3">
      <h2>Add a new movie</h2>
    </div>
  </div>
  <div class="row justify-content-md-center mb-5">
    <div class="col col-sm-6 bg-white pb-3">
      <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.input :comment %>
        <%= f.association :movie %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
